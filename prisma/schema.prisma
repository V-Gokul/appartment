generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model polls {
  id           Int       @id @default(autoincrement())
  pollName     String
  description  String
  questionType String
  postedAt     DateTime  @default(now())
  pollExpiry   DateTime
  minOptions   Int?
  maxOptions   Int?
  isAvailable  Boolean   @default(true)
  options      options[]
  // appartments Int[]
  // block Int[]

  pollSelection pollSelection[]
}

model options {
  id            Int             @id @default(autoincrement())
  text          String
  polls         polls           @relation(fields: [pollsId], references: [id])
  pollsId       Int
  pollSelection pollSelection[]
}

model pollSelection {
  id         Int     @id @default(autoincrement())
  poll       polls   @relation(fields: [poll_id], references: [id])
  poll_id    Int
  options    options @relation(fields: [optionsId], references: [id])
  optionsId  Int
  profile    profile @relation(fields: [profile_id], references: [id])
  profile_id Int

}

model profile {
  id            Int             @id @default(autoincrement())
  name          String
  email         String
  createAt      DateTime        @default(now())
  pollSelection pollSelection[]
  notice_bord   noticeBord[]
}

model noticeBord {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  image       String
  profile     profile @relation(fields: [profile_id], references: [id])
  profile_id  Int
}
