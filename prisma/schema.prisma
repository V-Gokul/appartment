generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model polls {
  id           Int       @id @default(autoincrement())
  pollName     String
  description  String
  questionType String
  postedAt     DateTime  @default(now())
  pollExpiry   DateTime
  minOptions    Int?
  maxOptions    Int?
  options      options[]

  // choices      choices[]
  // appartments Int[]
  // block Int[]

}

model options {
  id            Int             @id @default(autoincrement())
  text          String
  polls         polls?          @relation(fields: [pollsId], references: [id])
  pollsId       Int
  pollSelection pollSelection[]
}

model pollSelection {
  id        Int       @id @default(autoincrement())
  options   options?  @relation(fields: [optionsId], references: [id])
  optionsId Int?
  profileId profile[]
}

